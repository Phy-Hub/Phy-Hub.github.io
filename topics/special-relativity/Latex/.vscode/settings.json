{
    "latex-workshop.latex.outDir": "output",

    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
            "-synctex=1",
            "-interaction=nonstopmode",
            "-file-line-error",
            "%DOC%",
            "-shell-escape"
            ],
            "env": {}
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
            "-shell-escape", // <---- added this line
            "-synctex=1",
            "-interaction=nonstopmode",
            "-file-line-error",
            "-pdf",
            "-outdir=output",
            "%DOC%"
            ],
            "env": {}
        }
    ],

    "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop",
    "editor.lineHeight": 22,
    "editor.padding.top": 20,
    "editor.wordWrap": "on",
    "editor.fontSize": 16
    },

    "workbench.colorTheme": "Solarized Light",

    "highlight.regexes": {

        "(.*\\n\\n\\n.*)": {"backgroundColor": "#ff9d00"},
        "(figure \\\\ref)": {"backgroundColor": "#ff9d00"},
        "(section \\\\ref)": {"backgroundColor": "#ff9d00"},
        "(chapter \\\\ref)": {"backgroundColor": "#ff9d00"},
        "(equation \\\\eqref)": {"backgroundColor": "#ff9d00"},
        "(equation \\\\ref)": {"backgroundColor": "#ff9d00"},
        "(equation \\(\\\\eqref)": {"backgroundColor": "#ff9d00"},
        "(?<!^%.*)(?<!\\\\caption.*)(^.*\\.\\s.*)": {"backgroundColor": "#ff9d00"},

    }




}
